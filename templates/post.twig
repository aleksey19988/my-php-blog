{% extends 'base.twig' %}

{% block body %}
    <div class="container">
        {% if post.image_path is not null %}
          <img src="{{ post.image_path }}" class="img-fluid" alt="{{ post.title|escape }}">
        {% endif %}
        <h1 class="mt-3" mb-3>{{ post.title|escape }}</h1>
        <div class="row mb-3">
            <div class="text-muted">Aleksey Kononenko | {{ post.publoshed_date|date("F d, Y") }}</div>
        </div>
        <div class="">
        {{ post.content|raw }}
        </div>
    </div>
{% endblock %}