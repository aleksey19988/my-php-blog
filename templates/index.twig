{% extends 'base.twig' %}

{% block body %}
<div class="container">
  <h3 class="mb-3 mt-3">Latest posts</h3>
  <div class="row">
    <div class="col-9">
      {% for post in posts %}
        <div class="row mb-2 mg-light" style="border: 1px solid #dddddd">
          <div class="p-3">
            {% if post.image_path is not null %}
              <img src="{{ post.image_path }}" class="card-img-top" alt="{{ post.title|escape }}">
            {% endif %}
            <div class="mt-3">
              <a href="/my-php-blog/{{ post.url_key }}"><h5 class="card-title">{{ post.title|escape }}</h5></a>
              <div class="text-muted">Aleksey Kononenko | {{ post.publoshed_date|date("F d, Y") }}</div>
              <p class="mt-2">{{ post.description|escape }}</p>
              <a href="/my-php-blog/{{ post.url_key }}" class="">Read more</a>
            </div>
          </div>
        </div>
      {% endfor %}
      <div class="row">
        <a href="my-php-blog/blog">View all</a>
      </div>
    </div>
    <div class="col-3">
      <div class="container">
        <h4>About</h4>
        <p>Hello! My name is Aleksey and I'm learning web development.</p>
      </div>
    </div>
  </div>
</div>
{% endblock %}